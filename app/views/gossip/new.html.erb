<html>
  <body>
    <!-- app/views/gossip/new.html.erb -->

    <%= form_tag url_for(action: 'create'), method: "post" do %>  

      <%= label_tag 'Title' %>
      <%= text_field_tag 'gossip[title]', @gossip.title %>
      <br /> <br />

      <%= label_tag 'Content' %>
      <%= text_area_tag 'gossip[content]', @gossip.content %>
      <br /> <br />

      <%= submit_tag "Create Gossip" %>

    <% end %>

    <!-- affiche les alertes -->
    <div class="alert alert-secondary" role="alert">
      <p>Super ton Gossip a été créé</p>
    </div>
    <div class="alert alert-danger" role="alert">
      <p> Une erreure s'est produite</p>
    </div>
  </body>
</html>

